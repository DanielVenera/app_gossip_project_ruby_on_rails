
<h1>Create an account</h1>
<hr>

<%# VALIDATION ERROR %>
<% if @user.errors.any? %>
    <div class="alert alert-danger m-auto" style="width: 600px" role="alert">
        <div id="error_explanation">
            <h2>Validation Error</h2>
            <% @user.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
            <% end %>
        </div>
    </div>
<% end %>

<%# SUCCESS %>
<% if @success == true then %>
<div class="alert alert-success" role="alert">
  <p>Welcome home <%= @user.first_name %> !</p>
</div>
<script type="text/javascript">
setTimeout("window.location='/'",3000);
</script> 
<% end %>

<div class="ml-5" style="width: 600px">
<%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'First Name' %>
      <%= text_field_tag 'first_name', @user.first_name%>
      <br /> <br />

      <%= label_tag 'Last Name' %>
      <%= text_field_tag 'last_name', @user.last_name%>
      <br /> <br />

      <%= label_tag 'Age' %>
      <%= text_field_tag 'age', @user.age%>
      <br /> <br />

      <%= label_tag 'City' %>
      <%= text_field_tag 'city', @city.name %>
      <br /> <br />

      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', @user.email%>
      <br /> <br />

      <%= label_tag 'Password' %>
      <%= text_field_tag 'password', @user.password%>
      <br /> <br />

      <%= label_tag 'Password confirmation' %>
      <%= text_field_tag 'password_confirmation', @user.password_confirmation %>
      <br /> <br />

      <%= submit_tag "Create Profile" %>

<% end %>
</div>


